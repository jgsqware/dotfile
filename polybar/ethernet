;

; this config is written for an unreleased version (polybar "wip-lemonbar" branch)
; it might need some tweaking to run on the latest released version... try for yourself
;

[bar/top]
monitor = ${env:MONITOR:eDP1}
width = 100%
height = 27

background = #222222
foreground = #ccfafafa
linecolor = #666

border-bottom-size = 2
border-bottom-color = #333333

spacing = 1
lineheight = 2
padding-left = 2
padding-right = 2
module-margin-left = 1
module-margin-right = 2

font-0 = ypn envypn:size=10;0
font-1 = "Wuncon Siji:pixelsize=10;0"
font-2 = "Font Awesome 5 Free:style=Regular:pixelsize=9;1"
font-3 = "Font Awesome 5 Free:style=Solid:pixelsize=9;1"
font-4 = "Font Awesome 5 Brands:pixelsize=9;1"
font-5 = "DejaVu Sans:pixelsize=9;1"

tray-position = right

modules-left = i3 spotify
modules-right = backlight pulseaudio cast wifi wired battery memory cpu date xkeyboard power-menu

scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
#index-sort = true
wrapping-scroll = true
strip-wsnumbers = true
pin-workspaces = true

label-mode-padding = 5

#label-unfocused-foreground = #44526C
#label-unfocused-padding = 1
#label-visible-foregroud = #44526C
#label-visible-padding = 1
#label-focused-foreground = #04142D
#label-focused-padding = 1
#label-urgent-padding = 1

[module/bspwm]
type = internal/bspwm
format = <label-state> <label-mode>

#ws-icon-0 = term;
#ws-icon-1 = web;
#ws-icon-2 = music;
#ws-icon-3 = slack;
#ws-icon-default =  


label-focused = %index%
label-focused-foreground = #fba922
label-focused-padding = 2

label-occupied = %index%
label-occupied-padding = 2

label-urgent = %index%
label-urgent-background = #bd2c40
label-urgent-padding = 2

label-empty = %index%
label-empty-foreground = #444
label-empty-padding = 2

label-monocle = 
label-monocle-padding = 2
label-monocle-background = #171717
label-monocle-foreground = #fba922

label-floating = 
label-floating-padding = 2
label-floating-background = #171717
label-floating-foreground = #fba922


[module/cpu]
type = internal/cpu
interval = 2
label = %{F#666}%{F#ccfafafa} %percentage%%


[module/memory]
type = internal/memory
interval = 2
label = %{F#666}%{F#ccfafafa} %percentage_used%%

[module/wired]
type = internal/network
interface = enp60s0u2u1 
interval = 3.0

format-connected-prefix = " "
format-connected-prefix-foreground = #666
label-connected = %local_ip%
label-disconnected-foreground = #66

[module/wifi]
type = internal/network
interface = wlp4s0
interval = 3.0

format-connected = <ramp-signal> <label-connected>
label-connected = %essid% 
label-disconnected-foreground = #66

ramp-signal-0 = 
ramp-signal-1 = 
ramp-signal-2 = 
ramp-signal-3 = 
ramp-signal-4 = 
ramp-signal-foreground = #666


[module/date]
type = internal/date
date = %%{T3}%%{F#666}%{F#ccfafafa} %Y-%m-%d %%{F#fba922}  %H:%M 
interval = 5

[module/pulseaudio]
type = internal/pulseaudio

format-volume = <ramp-volume> <label-volume>
label-volume = %percentage%%
label-volume-foreground = ${root.foreground}

ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 
ramp-volume-3 = 
ramp-volume-foreground = #666

label-muted = %{F#666}%{F#ccfafafa} sound muted
label-muted-foreground = #99

[module/xkeyboard]
type = internal/xkeyboard

blacklist-0 = num lock

format-prefix = " "
format-prefix-foreground = #666

label-layout = %layout%

label-indicator-padding = 2

[module/battery]
type = internal/battery
full-at = 98

format-charging = <animation-charging> <label-charging>
format-discharging = <ramp-capacity> <label-discharging>
format-full = %{F#666}%{F#ccfafafa}  <label-full>

ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-foreground = #666

animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-foreground = #666
animation-charging-framerate = 750

[module/cast]
type = custom/text
content = cast

[module/spotify]
type = custom/script
exec = ~/.config/polybar/spotify
interval = 2
click-left= bspc desktop --focus music

[module/power-menu]
type = custom/menu

label-open = 
label-close = 
label-separator = /
label-separator-margin = 1

menu-0-0 = Terminate WM
menu-0-0-exec = bspc quit -1
menu-0-1 = Reboot
menu-0-1-exec = menu-open-1
menu-0-2 = Power off
menu-0-2-exec = menu-open-2
menu-0-3 = Lock
menu-0-3-exec = $HOME/.config/bspwm/lock

menu-1-0 = Cancel
menu-1-0-exec = menu-open-0
menu-1-1 = Reboot
menu-1-1-exec = systemctl reboot

menu-2-0 = Power off
menu-2-0-exec = systemctl poweroff
menu-2-1 = Cancel
menu-2-1-exec = menu-open-0

[module/backlight]
type = internal/xbacklight
output =${env:MONITOR:eDP1} 

enable-scroll = false
format =  %{F#666}<ramp>%{F#ccfafafa} <label> 
label = %percentage%%

ramp-0 = 🌕
ramp-1 = 🌔
ramp-2 = 🌓
ramp-3 = 🌒
ramp-4 = 🌑

